pkgname=adjbacklight
pkgver=4
pkgrel=2
pkgdesc="Convient method for adjusting the backlight on your portable computer"
arch=('any')
url="https://github.com/maandree/adjbacklight"
license=('GPL3')
depends=('java-runtime>=6')
makedepends=('java-environment>=6' 'bash')
